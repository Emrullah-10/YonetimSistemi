@model DepartmanProjem.Models.Birim

@{
    ViewData["Title"] = "Birim Detayları";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-sitemap me-2"></i>Birim Detayları</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Geri Dön
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Birim Bilgileri</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BirimId)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.BirimId)</dd>
                    
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BirimAd)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.BirimAd)</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model?.BirimId" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Düzenle
                </a>
                <a asp-action="Delete" asp-route-id="@Model?.BirimId" class="btn btn-danger">
                    <i class="fas fa-trash me-2"></i>Sil
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-users me-2"></i>Bu Birime Bağlı Personeller</h5>
            </div>
            <div class="card-body">
                @if (Model?.Personeller != null && Model.Personeller.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var personel in Model.Personeller)
                                {
                                    <tr>
                                        <td>@personel.Ad</td>
                                        <td>@personel.Soyad</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Bu birime henüz personel atanmamış.</p>
                }
            </div>
        </div>
    </div>
</div>
